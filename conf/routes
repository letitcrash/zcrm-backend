# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                                   controllers.Application.index
  
# Setup Database 
GET     /setupdb                                                            controllers.SetupDBController.setupDataBase

# Signup
POST    /signup                                                             controllers.SignupController.sendSignupEmail
POST    /activate-user                                                      controllers.SignupController.activateUserWithToken
#POST    /deactivate-user                                                   controllers.SignupController.deactivateUser

# Password
POST    /users/:userId/password/recover                                     controllers.UserController.setPasswordUsingToken(userId: Int)

# Logon
POST /login                                                                 controllers.LoginController.login

# Companies
GET     /companies/:companyId                                               controllers.CompanyController.get(companyId: Int)

# Employees
POST    /companies/:companyId/employees                                     controllers.EmployeeController.inviteEmployee(companyId: Int)

#Mailbox
POST   /companies/:companyId/employees/:employeeId/mail/send                controllers.ExchangeController.sendEmail(companyId: Int, employeeId: Int)
GET    /companies/:companyId/employees/:employeeId/mail/inbox               controllers.ExchangeController.getInboxEmails(companyId: Int, employeeId: Int)
GET    /companies/:companyId/employees/:employeeId/mail/sentbox             controllers.ExchangeController.getOutboxEmails(companyId: Int, employeeId: Int)
GET    /companies/:companyId/employees/:employeeId/mail/getOne							controllers.ExchangeController.getMail(companyId: Int, employeeId:Int)


#Tasks
POST   /companies/:companyId/tasks                                          controllers.TaskController.newTask(companyId: Int)
GET    /companies/:companyId/tasks/:taskId                                  controllers.TaskController.getTask(companyId: Int, taskId: Int)
GET    /companies/:companyId/tasks                                          controllers.TaskController.getAllTasks(companyId: Int) 



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
